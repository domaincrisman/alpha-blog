<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<div class="row justify-content-center">
  <% if logged_in? && current_user.admin? %>
    <span><%= link_to 'Edit Category Name', edit_category_path(@category), 
              class: "badge badge-pill badge-success" %></span>    
  <% end %>
</div>
<div class="flickr_pagination">
  <%= will_paginate @category_articles, :container => false %>
</div>

<%= render 'articles/article', obj: @category_articles %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @category_articles, :container => false %>
</div>